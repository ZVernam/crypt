{
  "name": "crypton",
  "version": "1.0.0",
  "description": "Tool for online encrypt/decrypt operations compatible with OpenSSL",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./dist && mkdir ./dist",
    "webpack": "webpack ./src/index.js -o ./dist --devtool inline-source-map",
    "copy": "cp index.html dist/index.html",
    "build": "npm run clean && npm run webpack && npm run copy",
    "deploy": "gh-pages -d ./dist",
    "publish": "npm run build && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZVernam/crypt.git"
  },
  "keywords": [
    "encrypt",
    "decrypt",
    "online"
  ],
  "author": "Evgenii Shchepotev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZVernam/crypt/issues"
  },
  "homepage": "https://github.com/ZVernam/crypt#readme",
  "dependencies": {
    "crypto-js": "4.0.0"
  },
  "devDependencies": {
    "gh-pages": "3.1.0",
    "webpack": "5.2.0",
    "webpack-cli": "4.1.0"
  }
}
